@inherits TwComponentBase<Anchor, Anchor.Slots>

@if (IsExternal)
{
	<a href="@Href" class="@_slots.GetBase()" rel="nofollow noreferrer" target="_blank" @attributes="AdditionalAttributes">
		@ChildContent
	</a>
}
else
{
	<NavLink href="@Href" class="@_slots.GetBase()" ActiveClass="@ActiveClass" Match="@Match">
		@ChildContent
	</NavLink>
}

@code
{
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public Slots? Classes { get; set; }

	[Parameter]
	public Colors Color { get; set; }

	[Parameter]
	public Sizes Size { get; set; } = Sizes.Medium;

	[Parameter]
	public Underlines Underline { get; set; } = Underlines.None;

	[Parameter]
	[EditorRequired]
	public string Href { get; set; }

	[Parameter]
	public bool Disabled { get; set; }

	[Parameter]
	public bool Block { get; set; }

	[Parameter]
	public string? ActiveClass { get; set; }

	[Parameter]
	public NavLinkMatch Match { get; set; }

	private bool IsExternal => Href.StartsWith("http://") || Href.StartsWith("https://");
}
