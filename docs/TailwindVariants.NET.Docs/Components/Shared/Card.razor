@inherits TwComponentBase<Card, Card.Slots>

<div class="@_slots.GetBase()"
	 data-slot="@SlotsNames.NameOf(SlotsTypes.Base)"
	 @attributes="AdditionalAttributes">
	@if (HeaderContent is not null)
	{
		<div class="@_slots.GetHeader()"
			 data-slot="@SlotsNames.NameOf(SlotsTypes.Header)">
			@HeaderContent
		</div>
	}

	<div class="@_slots.GetBody()"
		 data-slot="@SlotsNames.NameOf(SlotsTypes.Body)">
		@(BodyContent ?? ChildContent)
	</div>

	@if (FooterContent is not null)
	{
		<div class="@_slots.GetFooter()"
			 data-slot="@SlotsNames.NameOf(SlotsTypes.Footer)">
			@FooterContent
		</div>
	}
</div>

@code
{
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public RenderFragment? HeaderContent { get; set; }

	[Parameter]
	public RenderFragment? BodyContent { get; set; }

	[Parameter]
	public RenderFragment? FooterContent { get; set; }

	[Parameter]
	public Slots? Classes { get; set; }
}
