@inherits TailwindComponentBase

<button type="@Type" class="@GetClasses()" disabled="@Disabled" @attributes="AdditionalAttributes">
    @ChildContent
</button>


@code 
{
    [Parameter] 
    public RenderFragment? ChildContent { get; set; }

    [Parameter] 
    public RenderFragment? IconContent { get; set; }

    [Parameter]
    public Colors Color { get; set; } = Colors.Default;

    [Parameter]
    public Sizes Size { get; set; } = Sizes.Medium;

    [Parameter]
    public string Type { get; set; } = "button";

    [Parameter]
    public bool IconOnly { get; set; }

    [Parameter] 
    public bool Disabled { get; set; }

    [Parameter] 
    public bool FullWidth { get; set; }
}
